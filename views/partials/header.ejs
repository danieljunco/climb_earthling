<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>ClimbProject</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/java"></script>
    </head>

    <body>

        <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/">ClimbProject</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                        <li class="nav-item <%= typeof page !== 'undefined' && page ==='campgrounds' ? 'active': '' %>">
                            <a class="nav-link" href="/campgrounds">Home</a>
                        </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                <% if(!currentUser){ %>
                    <li class="nav-item <%= typeof page !== 'undefined' && page ==='login' ? 'active': '' %>">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item <%= typeof page !== 'undefined' && page ==='register' ? 'active': '' %>">
                        <a class="nav-link" href="/register">Sign Up</a>
                    </li>
                <% } else{ %>
                    <li class="nav-item">
                        <a class="nav-link">Signed as <%= currentUser.username %></a>
                    </li>                                   
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                <% } %>

                </ul>
        
            </div>
        </nav>
        <% if(error && error.length >0){ %>
        <div class="container">
                <div class="alert alert-danger" role="alert">
                        <%= error %>
                </div>
        </div>
            <% } %>
        <% if(success && success.length >0){ %>
        <div class="container"></div>
            <div class="alert alert-success role="alert">
                    <%= success %>
            </div>
        </div>
        <% } %>

        
