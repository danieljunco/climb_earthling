<% include ../partials/header %>

<div class="container bg-light">
    <div class="row">
        <div class="col-lg-4">
            <div class="card">
                <img class="rounded-circle card-img-top w-100 d-block" src="http://omglifestyle.co.uk/wp-content/uploads/2017/06/No-Profile-1.jpg" alt="">
                <div class="card-img-overlay d-flex justify-content-end align-items-end">
                    <a href="" class="btn btn-secondary btn-xs">Upload Photo</a>
                </div>
            </div>
            <div class="card-body">
                <h2 id="username-profile" class="card-title"><%= user.username %></h2>
                <h3 class="card-title"><%= user.alias %></h3>
                <em><h5 class="d-inline-flex card-title">Member since&nbsp;<span> <%= moment(user.createdAt).fromNow() %></span></h5></em> 
                <hr>
                <h5 class="card-title"><%= user.email %></h5>
                <h5 class="card-title"><%= user.city %></h5>
                <h5 class="card-title"><%= user.country %></h5>
            </div>

        </div>
        <div class="col">
            <h3>Change Personal Information</h3>
            <div class="row">
                <div class="col">
                    <form class="d-flex" action="/users/<%= user._id %>?_method=PUT" method="POST">
                        <div class="col">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input class="form-control" type="text" name="profile[name]" value="<%= user.name %>">
                            </div>
                            <div class="form-group">
                                <label for="city">City</label>
                                <input class="form-control" type="text" name="profile[city]" value="<%= user.city %>">
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone</label>
                                <input class="form-control" type="number" name="profile[phone]" value="<%= user.phone %>">
                            </div>
                            <div class="form-group">
                                <input class="btn btn-primary btn-xs" type="submit" value="Save Changes">
                            </div>
                        </div>
                        <div class="col">
                            <div class="col">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input class="form-control" type="text" name="profile[email]" value="<%= user.email%>">
                                </div>
                                <div class="form-group">
                                    <label for="country">Country</label>
                                    <input class="form-control" type="text" name="profile[country]" value="<%= user.country %>">
                                </div>
                                <div class="form-group">
                                    <label for="alias">Alias</label>
                                    <input class="form-control" type="text" name="profile[alias]" value="<%= user.alias %>">
                                </div>
                        </div>
                    </form>
                </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h3>Change Password</h3>
                    <form action=""></form>
                    <div class="form-group">
                        <label for="city">New Password</label>
                        <input class="form-control" type="password" name="password">
                    </div>
                    <div class="form-group">
                        <label for="phone">New Password Again</label>
                        <input class="form-control" type="password" name="password2">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-secondary btn-xs" type="submit" value="Change Password">
                    </div>
                </div>
                <div class="col">

                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>